@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/styles/material/css")
    @Scripts.Render("~/bundles/common/js")
</head>
<body>
    <div class="catch-me mdl-layout mdl-js-layout mdl-layout--fixed-header">
        @{
            <!--HEADER-->
            Html.RenderPartial("LayoutHeader");

            <!--DRAWER MENU-->
            Html.RenderPartial("LayoutDrawerMenu");
        }

        <!--CONTENT-->
        <div class="mdl-layout__content mdl-color--grey-100" id="container">
            <div class="centered">
                @RenderBody()
            </div>
        </div>
    </div>

    <a href="#" id="add-trip" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab
                                     mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp">
        <i class="material-icons">add</i>
    </a>
       
    @RenderSection("scripts", false)
    @Scripts.Render("~/bundles/iscroll/js");
</body>
</html>